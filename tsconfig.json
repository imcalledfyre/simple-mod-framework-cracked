{
  "compilerOptions": {
    "outDir": "./compiled",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "target": "ES2019",
    "module": "CommonJS",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "importsNotUsedAsValues": "error",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "noEmitHelpers": true,
    "importHelpers": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "compiled",
    "src/**/*.min.js"
  ]
}
